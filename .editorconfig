# https://editorconfig.org/

root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.go]
indent_style = tab

[{*.yml,*.yaml,*.json,*.md}]
indent_size = 2
max_line_length = off

[Makefile]
indent_style = tab
